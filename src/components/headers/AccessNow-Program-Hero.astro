<style>
  .fade-transition {
    transition: opacity 3s;
  }
</style>

<script>
  var words = ['SUPPORT', 'TOOLS', 'VALUE', 'COMMUNITY'];
  var currentIndex = 0;
  var wordElement = document.getElementById('word');

  function updateDynamicWord() {
  wordElement.classList.remove('fade-transition');
  wordElement.style.opacity = '0';

  currentIndex = (currentIndex + 1) % words.length;
  var currentWord = words[currentIndex];
  wordElement.textContent = currentWord;

  // Adjust the width of the element based on the length of the current word
  var wordWidth = currentWord.length * 2 + 4; // Adjust the multiplier and constant according to your preference
  wordElement.style.width = wordWidth + 'rem';

  // Trigger reflow to restart the transition
  void wordElement.offsetWidth;

  wordElement.style.opacity = '1';
  wordElement.classList.add('fade-transition');
}


  // Immediately set the initial word
  wordElement.textContent = words[currentIndex];

  // Start the interval for updating the dynamic word with a fade transition (e.g., 4000 milliseconds)
  setInterval(updateDynamicWord, 4000);
</script>


